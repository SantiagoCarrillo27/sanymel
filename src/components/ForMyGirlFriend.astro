<style>
  @keyframes fade {
    0% {
      opacity: 0;
    }
    10% {
      opacity: 1;
    }
    30% {
      opacity: 1;
    }
    40% {
      opacity: 0;
    }
    100% {
      opacity: 0;
    }
  }
</style>

<script>
  const startDate = new Date("2022-04-01");
  const counter = document.getElementById("time-counter");

  function calculateTime(start: Date) {
    const now = new Date();

    let years = now.getFullYear() - start.getFullYear();
    let months = now.getMonth() - start.getMonth();
    let days = now.getDate() - start.getDate();

    if (days < 0) {
      months -= 1;
      const prevMonth = new Date(now.getFullYear(), now.getMonth(), 0);
      days += prevMonth.getDate();
    }

    if (months < 0) {
      years -= 1;
      months += 12;
    }

    return { years, months, days };
  }

  function updateCounter() {
    const { years, months, days } = calculateTime(startDate);
    counter!.textContent = `${years} a√±os, ${months} meses, ${days} d√≠as`;
  }

  updateCounter();
  setInterval(updateCounter, 1000 * 60 * 60);
  
</script>
