---
const heartsCount = 20; // cuantos corazones quieres
const hearts = Array.from({ length: heartsCount });
---

<div id="hearts-container" class="absolute w-full min-h-screen inset-0 overflow-hidden pointer-events-none">
  {hearts.map((_, i) => (
    <div
      class="heart"
      style={`--x: ${Math.random() * 100}vw; --size: ${1 + Math.random() * 1.5}rem; --duration: ${6 + Math.random() * 4}s; --delay: ${Math.random() * 5}s;`}
    >ğŸ’</div>
  ))}
</div>

<style>
  #hearts-container {
    z-index: 50;
  }

  .heart {
    position: absolute;
    top: -2rem;
    left: var(--x);
    font-size: var(--size);
    opacity: 0.8;
    animation: fall var(--duration) linear infinite;
    animation-delay: var(--delay);
  }

  @keyframes fall {
    0% {
      transform: translateY(0);
      opacity: 0.5;
    }
    50%{
        opacity: 0.8;
    }
    70%{
        opacity: 0.6;
    }
    100% {
      transform: translateY(100vh);
      opacity: 0;
    }
  }
</style>
